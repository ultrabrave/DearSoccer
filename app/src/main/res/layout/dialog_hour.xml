<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:headerBackground="@color/colorBlueDarkPress"
        android:numbersBackgroundColor="@color/colorWhite"
        android:numbersSelectorColor="@color/colorWhite"
        android:numbersTextColor="@color/black_overlay"
        android:numbersInnerTextColor="@color/colorBlack"
        android:amPmBackgroundColor="@color/colorBlack"
        android:amPmTextColor="@color/colorBlack"
        />
    <Button
        android:id="@+id/btnhour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlueDarkPress"
        android:text="OK"
        android:layout_gravity="right"
        android:gravity="right"
        android:padding="20dp"
        android:background="@android:color/transparent"/>
</LinearLayout>